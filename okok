/* style.css */
:root {
  --bg: #111;
  --text: #eee;
  --accent: #5be3a7;
}

body.light {
  --bg: #fff;
  --text: #111;
  --accent: #0077ff;
}

body {
  background-color: var(--bg);
  color: var(--text);
  font-family: 'Segoe UI', sans-serif;
  margin: 0;
  padding: 0;
}

header {
  background: var(--accent);
  padding: 1em;
}

nav ul {
  list-style: none;
  display: flex;
  gap: 2em;
  padding: 0;
}

